;----------------------------------------------------------
[module/date-calendar]
type = custom/script
exec = ~/.config/polybar/scripts/popup-calendar.sh
interval = 5
click-left = ~/.config/polybar/scripts/popup-calendar.sh --popup &

;----------------------------------------------------------
;		        M O D U L E / D A T E T I M E
;----------------------------------------------------------
[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-foreground = #1e1e20
format-background = #c6723a
format-padding = 2

label = %date% %time%

